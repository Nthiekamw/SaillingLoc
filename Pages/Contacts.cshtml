@page
@model SailingLoc.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
     
}


<style>
    .card {
    background-color: #f9f9f9; /* Couleur de fond */
    border: 1px solid #ccc; /* Bordure */
    border-radius: 10px; /* Coins arrondis */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Ombre */
    transition: transform 0.2s; /* Animation au survol */
}

.card:hover {
    transform: scale(1.05); /* Agrandissement au survol */
}

.text-custom {
    color: #AD7C59; /* Couleur de texte */
}
.form-group label {
    margin-bottom: 5px; /* Espace entre le label et le champ */
}

</style>
<link rel="stylesheet" href="~/css/style.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
