<div class="container mt-5">
    <h2 class="text-center mb-4">CONTACT</h2>
    <p class="text-center">Envoyez-nous un mail</p>
    <p class="text-center"><a href="mailto:info@sailingcop.com">info@sailingcop.com</a></p>

    <div class="row justify-content-center mb-4">
        <div class="col-md-3 text-center card p-3 mx-2 card-custom">
            <i class="fas fa-map-marker-alt fa-2x text-custom"></i>
            <h5 class="text-custom">Notre adresse</h5>
            <p>123, Quai des Navigateurs, 75000 Paris, France</p>
        </div>
        <div class="col-md-3 text-center card p-3 mx-2 card-custom">
            <i class="fas fa-clock fa-2x text-custom"></i>
            <h5 class="text-custom">Heures d'ouverture</h5>
            <p>Lun - Ven: 9h00 - 19h00</p>
        </div>
        <div class="col-md-3 text-center card p-3 mx-2 card-custom">
            <i class="fas fa-phone fa-2x text-custom"></i>
            <h5 class="text-custom">Appelez-nous</h5>
            <p><a href="tel:+33612345678">+33 6 12 34 56 78</a></p>
        </div>
    </div>
</div>
  <div class="row">
        <!-- Bloc Formulaire -->
       <div class="col-md-6">

<h3 class="mt-5 text-center">Entrer en contact avec nous</h3>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success">@Model.SuccessMessage</div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<form method="post">
    <div class="form-group">
        <label for="Name" class="font-weight-bold">Votre Nom</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>
    <div class="form-group">
        <label for="Email" class="font-weight-bold">Votre Email</label>
        <input type="email" class="form-control" id="Email" name="Email" required />
    </div>
    <div class="form-group">
        <label for="Phone" class="font-weight-bold">Votre Numéro</label>
        <input type="text" class="form-control" id="Phone" name="Phone" required />
    </div>
    <div class="form-group">
        <label for="Subject" class="font-weight-bold">Sujet</label>
        <input type="text" class="form-control" id="Subject" name="Subject" required />
    </div>
    <div class="form-group">
        <label for="Message" class="font-weight-bold">Message</label>
        <textarea class="form-control" id="Message" name="Message" rows="4" required></textarea>
    </div>
    <button type="submit" class="btn btn-custom">Envoyez votre message</button>
</form>




