@page
@model SailingLoc.Pages.DocModel
@{
    ViewData["Title"] = "Mes Documents";
}

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<style>
    body {
        font-family: 'Montserrat', sans-serif;
        background-color: #f5f3ef;
    }

    .documents-wrapper {
        background-color: #f5f3ef;
        min-height: 100vh;
        padding: 20px;
    }

    .documents-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 40px;
        background-color: white;
        border-radius: 8px;
    }

    .user-header {
        text-align: right;
        margin-bottom: 30px;
    }

    .user-info {
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .user-avatar {
        width: 40px;
        height: 40px;
        background-color: #5a7d9a;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .user-name {
        font-size: 0.95rem;
        color: #333;
        font-weight: 500;
    }

    .page-title {
        font-size: 1.6rem;
        font-weight: 600;
        color: #1a1a1a;
        margin-bottom: 30px;
    }

    .document-card {
        background: white;
        border: 2px solid #ddd;
        border-radius: 12px;
        padding: 25px 30px;
        margin-bottom: 20px;
        position: relative;
    }

    .document-header {
        display: flex;
        align-items: flex-start;
        gap: 15px;
        margin-bottom: 20px;
    }

    .document-icon {
        width: 50px;
        height: 50px;
        background-color: #a67c52;
        color: white;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.4rem;
        flex-shrink: 0;
    }

    .document-info {
        flex-grow: 1;
    }

    .document-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #1a1a1a;
        margin-bottom: 8px;
    }

    .document-description {
        font-size: 0.9rem;
        color: #666;
        margin: 0;
        line-height: 1.5;
    }

    .error-message {
        position: absolute;
        top: 25px;
        right: 30px;
        color: #dc3545;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .document-footer {
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 15px;
    }

    .document-status {
        display: flex;
        align-items: center;
        gap: 15px;
        flex-wrap: wrap;
    }

    .status-link {
        color: #5a7d9a;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .status-link:hover {
        text-decoration: underline;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .status-badge.validated {
        color: #28a745;
    }

    .status-badge.rejected {
        color: #dc3545;
    }

    .status-badge i {
        font-size: 1rem;
    }

    .status-date {
        color: #999;
        font-size: 0.85rem;
    }

    .document-actions {
        display: flex;
        gap: 10px;
    }

    .btn-replace,
    .btn-delete,
    .btn-upload {
        padding: 8px 18px;
        border: none;
        border-radius: 6px;
        font-size: 0.9rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .btn-replace {
        background-color: transparent;
        color: #333;
        border: 1px solid #999;
    }

    .btn-replace:hover {
        background-color: #f5f5f5;
    }

    .btn-delete {
        background-color: transparent;
        color: #dc3545;
        border: 1px solid transparent;
    }

    .btn-delete:hover {
        background-color: #fff5f5;
    }

    .btn-upload {
        background-color: #a67c52;
        color: white;
    }

    .btn-upload:hover {
        background-color: #8f6a44;
    }

    .no-document {
        color: #999;
        font-size: 0.9rem;
        margin: 0;
    }

  
</style>

<div class="documents-wrapper">
    <div class="documents-container">
        <!-- User Header -->
        <div class="user-header">
            <div class="user-info">
                <div class="user-avatar">WN</div>
                <span class="user-name">william nthiekam</span>
            </div>
        </div>

        <!-- Page Title -->
        <h1 class="page-title">Mes Documents</h1>

        <!-- Document 1: Carte d'identité -->
        <div class="document-card">
            <div class="document-header">
                <div class="document-icon">
                    <i class="fas fa-id-card"></i>
                </div>
                <div class="document-info">
                    <h3 class="document-title">Carte d'identité</h3>
                    <p class="document-description">Une copie recto-verso de votre pièce d'identité valide</p>
                </div>
            </div>
            <div class="document-footer">
                <div class="document-status">
                    <a href="#" class="status-link">Voir le document</a>
                    <span class="status-badge validated">
                        <i class="fas fa-check-circle"></i>
                        Validé
                    </span>
                    <span class="status-date">Ajouté le 15/05/2023</span>
                </div>
                <div class="document-actions">
                    <button class="btn-replace">
                        <i class="fas fa-upload"></i>
                        Remplacer
                    </button>
                    <button class="btn-delete">
                        <i class="fas fa-trash"></i>
                        Supprimer
                    </button>
                </div>
            </div>
        </div>

        <!-- Document 2: Permis bateau -->
        <div class="document-card">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <p class="error-message">@Model.ErrorMessage</p>
            }
            <div class="document-header">
                <div class="document-icon">
                    <i class="fas fa-file-alt"></i>
                </div>
                <div class="document-info">
                    <h3 class="document-title">Permis bateau</h3>
                    <p class="document-description">Votre permis bateau valide (si nécessaire pour la location)</p>
                </div>
            </div>
            <div class="document-footer">
                <div class="document-status">
                    <a href="#" class="status-link">Voir le document</a>
                    <span class="status-badge rejected">
                        <i class="fas fa-times-circle"></i>
                        Rejeté
                    </span>
                    <span class="status-date">Ajouté le 20/06/2023</span>
                </div>
                <div class="document-actions">
                    <button class="btn-replace">
                        <i class="fas fa-upload"></i>
                        Remplacer
                    </button>
                    <button class="btn-delete">
                        <i class="fas fa-trash"></i>
                        Supprimer
                    </button>
                </div>
            </div>
        </div>

        <!-- Document 3: Assurance -->
        <div class="document-card">
            <div class="document-header">
                <div class="document-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <div class="document-info">
                    <h3 class="document-title">Assurance</h3>
                    <p class="document-description">Votre attestation d'assurance couvrant la location</p>
                </div>
            </div>
            <div class="document-footer">
                <div class="document-status">
                    <p class="no-document">Aucun document téléchargé</p>
                </div>
                <div class="document-actions">
                    <button class="btn-upload">
                        <i class="fas fa-upload"></i>
                        Télécharger
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>