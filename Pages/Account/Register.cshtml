@page
@model SaillingLoc.Pages.Account.RegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Créer un compte";
}

<div class="d-flex justify-content-center align-items-center min-vh-100" style="background-color: #F5F1EB;">
    <div class="text-center" style="max-width: 500px; width: 100%;">
        
        <!-- Logo -->
        <div class="mb-4">
            <img src="~/images/sailingloc-logo.png" alt="SailingLoc" style="height: 80px;" />
        </div>

        <!-- Titre -->
        <h2 class="mb-2 fw-bold" style="color: #4A4A4A; font-size: 28px;">Créer un compte</h2>
        <p class="mb-4" style="color: #6B6B6B;">Rejoignez la communauté SailingLoc</p>

        <!-- Formulaire -->
        <form method="post" enctype="multipart/form-data">
            
            <!-- Je suis un... -->
            <div class="mb-4 text-start">
                <label class="form-label" style="color: #4A4A4A; font-weight: 500;">Je suis un...</label>
                <div class="d-flex gap-4">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Input.Role" id="Locataire" value="Locataire" asp-for="Input.Role" />
                        <label class="form-check-label" for="Locataire" style="color: #4A4A4A;">
                            Locataire
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Input.Role" id="Proprietaire" value="Proprietaire" asp-for="Input.Role" />
                        <label class="form-check-label" for="Proprietaire" style="color: #4A4A4A;">
                            Propriétaire
                        </label>
                    </div>
                </div>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>

            <!-- Prénom et Nom sur la même ligne -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="text-start">
                        <label asp-for="Input.FirstName" class="form-label" style="color: #4A4A4A; font-weight: 500;">Prénom</label>
                        <input asp-for="Input.FirstName" class="form-control" placeholder="Votre prénom" style="background-color: #FFFFFF; border: 1px solid #D0D0D0; padding: 12px; border-radius: 6px;" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-start">
                        <label asp-for="Input.LastName" class="form-label" style="color: #4A4A4A; font-weight: 500;">Nom</label>
                        <input asp-for="Input.LastName" class="form-control" placeholder="Votre nom" style="background-color: #FFFFFF; border: 1px solid #D0D0D0; padding: 12px; border-radius: 6px;" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Email -->
            <div class="mb-3 text-start">
                <label asp-for="Input.Email" class="form-label" style="color: #4A4A4A; font-weight: 500;">Email</label>
                <input asp-for="Input.Email" class="form-control" style="background-color: #E8F0FE; border: 1px solid #D0D0D0; padding: 12px; border-radius: 6px;" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Téléphone -->
            <div class="mb-3 text-start">
                <label asp-for="Input.PhoneNumber" class="form-label" style="color: #4A4A4A; font-weight: 500;">Téléphone</label>
                <input asp-for="Input.PhoneNumber" class="form-control" style="background-color: #FFFFFF; border: 1px solid #D0D0D0; padding: 12px; border-radius: 6px;" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Mot de passe -->
            <div class="mb-3 text-start">
                <label asp-for="Input.Password" class="form-label" style="color: #4A4A4A; font-weight: 500;">Mot de passe</label>
                <div class="position-relative">
                    <input asp-for="Input.Password" type="password" class="form-control" style="background-color: #E8F0FE; border: 1px solid #D0D0D0; padding: 12px; border-radius: 6px;" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>

            <!-- Confirmer le mot de passe -->
            <div class="mb-3 text-start">
                <label asp-for="Input.ConfirmPassword" class="form-label" style="color: #4A4A4A; font-weight: 500;">Confirmer le mot de passe</label>
                <div class="position-relative">
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirmez votre mot de passe" style="background-color: #FFFFFF; border: 1px solid #D0D0D0; padding: 12px; border-radius: 6px;" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <!-- Conditions d'utilisation -->
            <div class="mb-3 text-start">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="AcceptTerms" required />
                    <label class="form-check-label" for="AcceptTerms" style="color: #4A4A4A; font-size: 14px;">
                        J'accepte les <a href="#" style="color: #AD7C59; text-decoration: none;">conditions d'utilisation</a> et la <a href="#" style="color: #AD7C59; text-decoration: none;">politique de confidentialité</a>.
                    </label>
                </div>
            </div>

            <!-- reCAPTCHA -->
            <div class="mb-3 d-flex justify-content-center">
                <div class="g-recaptcha" data-sitekey="your-site-key"></div>
            </div>

            <!-- Bouton de création de compte -->
            <div class="mb-3">
                <button type="submit" class="btn w-100" style="background-color: #B8C5D6; color: #FFFFFF; padding: 12px; border-radius: 6px; border: none; font-weight: 500; font-size: 16px;">
                    Créer mon compte
                </button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
}