@page
@model LoginModel
@{
    ViewData["Title"] = "Se connecter";
}

<h2 class="mb-4 fw-bold text-center">Se connecter</h2>
<div class="d-flex justify-content-center" style="background-color: #F5F1EB; padding: 30px;">
  <form method="post" class="text-center" style="max-width: 400px; width: 100%;">
    <div class="mb-3">
      <label asp-for="Input.Email" class="form-label d-block fw-bold">Email</label>
      <input asp-for="Input.Email" class="form-control mx-auto" style="max-width: 100%;" />
      <span asp-validation-for="Input.Email" class="text-danger d-block"></span>
    </div>

    <div class="mb-3">
      <label asp-for="Input.Password" class="form-label d-block fw-bold">Mot de passe</label>
      <input asp-for="Input.Password" type="password" class="form-control mx-auto" style="max-width: 100%;" />
      <span asp-validation-for="Input.Password" class="text-danger d-block"></span>
    </div>

    <div class="mt-3">
      <button type="submit" class="btn" style="background-color: #AD7C59; color: white;">
        Se connecter
      </button>
    </div>
  </form>
</div>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
