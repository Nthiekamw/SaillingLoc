@page
@model IndexModel
@{
    ViewData["Title"] = "Accueil";
}

<!-- NAVBAR -->
<header class="bg-white shadow-md fixed w-full top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 py-3 flex items-center justify-between">
        <div class="text-xl font-bold text-[#2d3e50]">SailFind</div>
        <nav class="hidden md:flex gap-6 text-sm font-medium text-[#2d3e50]">
            <a href="#" class="hover:text-[#c28b63]">Accueil</a>
            <a href="#" class="hover:text-[#c28b63]">Bateaux</a>
            <a href="#" class="hover:text-[#c28b63]">Destinations</a>
            <a href="#" class="hover:text-[#c28b63]">Contact</a>
        </nav>
        <div class="md:hidden">
            <!-- Mobile menu toggle -->
        </div>
    </div>
</header>

<!-- HERO -->
<section class="relative w-full h-[520px] bg-cover bg-center pt-[80px]" style="background-image: url('/images/hero-boat.jpg');">
    <div class="absolute inset-0 bg-black bg-opacity-40 flex flex-col justify-center items-center text-center text-white px-4">
        <h1 class="text-3xl md:text-5xl font-bold mb-4">Trouvez le bateau parfait pour votre prochaine aventure</h1>
        <p class="text-lg mb-6">Explorez les plus belles destinations en mer</p>

        <!-- SEARCH FILTER -->
        <div class="bg-white p-4 rounded-lg shadow-md flex flex-col md:flex-row gap-4 w-full max-w-4xl">
            <input type="text" placeholder="Destination" class="flex-1 p-2 border rounded-md" />
            <input type="date" class="flex-1 p-2 border rounded-md" />
            <input type="number" placeholder="Nombre de personnes" class="flex-1 p-2 border rounded-md" />
            <button class="bg-[#c28b63] text-white px-6 py-2 rounded-md hover:bg-[#aa6f47]">Rechercher</button>
        </div>
    </div>
</section>

<!-- Naviguez librement -->
<section class="py-12 px-4 text-center bg-white">
    <h2 class="text-2xl md:text-3xl font-semibold mb-4">Naviguez librement</h2>
    <p class="max-w-2xl mx-auto text-gray-600">Choisissez parmi des milliers de bateaux à travers l'Europe. Réservez facilement et partez à l'aventure.</p>
    <img src="/images/solo-boat.jpg" alt="Naviguez librement" class="mx-auto mt-6 rounded-lg shadow-md w-full max-w-xl" />
    <button class="mt-6 bg-[#c28b63] text-white px-6 py-2 rounded-md hover:bg-[#aa6f47]">En savoir plus</button>
</section>

<!-- TROUVEZ LE BATEAU - SLIDES -->
<section class="py-12 bg-[#f0efeb] text-center">
    <h2 class="text-2xl font-semibold mb-6">Trouvez le bateau qui vous correspond</h2>
    <div class="flex overflow-x-auto gap-4 px-4 scrollbar-hide">
        <img src="/images/sail.jpg" alt="Voilier" class="rounded-lg h-40 w-64 object-cover shadow-md" />
        <img src="/images/motor.jpg" alt="Moteur" class="rounded-lg h-40 w-64 object-cover shadow-md" />
        <img src="/images/catamaran.jpg" alt="Catamaran" class="rounded-lg h-40 w-64 object-cover shadow-md" />
        <img src="/images/yacht.jpg" alt="Yacht" class="rounded-lg h-40 w-64 object-cover shadow-md" />
        <img src="/images/ferry.jpg" alt="Ferry" class="rounded-lg h-40 w-64 object-cover shadow-md" />
    </div>
</section>

<!-- OFFRES -->
<section class="bg-white py-12">
    <h2 class="text-center text-2xl font-semibold mb-8">Découvrez nos meilleures offres</h2>
    <div class="flex flex-wrap justify-center gap-6 px-4">
        @* Offres répétées *@
        <div class="bg-white shadow-lg rounded-lg overflow-hidden w-80">
            <img src="/images/offer1.jpg" class="w-full h-48 object-cover" />
            <div class="p-4">
                <h3 class="font-bold text-lg mb-2">Voilier en Croatie</h3>
                <p class="text-[#c28b63] font-semibold text-xl">850€ / semaine</p>
                <button class="mt-4 bg-[#c28b63] text-white px-4 py-2 rounded hover:bg-[#aa6f47]">Voir l'annonce</button>
            </div>
        </div>
        <div class="bg-white shadow-lg rounded-lg overflow-hidden w-80">
            <img src="/images/offer2.jpg" class="w-full h-48 object-cover" />
            <div class="p-4">
                <h3 class="font-bold text-lg mb-2">Catamaran en Grèce</h3>
                <p class="text-[#c28b63] font-semibold text-xl">530€ / jour</p>
                <button class="mt-4 bg-[#c28b63] text-white px-4 py-2 rounded hover:bg-[#aa6f47]">Voir l'annonce</button>
            </div>
        </div>
        <div class="bg-white shadow-lg rounded-lg overflow-hidden w-80">
            <img src="/images/offer3.jpg" class="w-full h-48 object-cover" />
            <div class="p-4">
                <h3 class="font-bold text-lg mb-2">Yacht à Monaco</h3>
                <p class="text-[#c28b63] font-semibold text-xl">1100€ / jour</p>
                <button class="mt-4 bg-[#c28b63] text-white px-4 py-2 rounded hover:bg-[#aa6f47]">Voir l'annonce</button>
            </div>
        </div>
    </div>
</section>

<!-- SIMPLE, RAPIDE, SÉCURISÉ -->
<section class="py-16 bg-[#dfe8df] text-center">
    <div class="max-w-6xl mx-auto px-4 flex flex-col md:flex-row justify-between gap-8">
        <div class="flex-1">
            <h3 class="font-bold text-xl mb-2">Choisissez votre bateau</h3>
            <p class="text-gray-700">Plus de 12 000 bateaux disponibles en quelques clics.</p>
        </div>
        <div class="flex-1">
            <h3 class="font-bold text-xl mb-2">Réservez en ligne</h3>
            <p class="text-gray-700">Un processus simple, rapide et entièrement sécurisé.</p>
        </div>
        <div class="flex-1">
            <h3 class="font-bold text-xl mb-2">Embarquez partout</h3>
            <p class="text-gray-700">Dans toute l’Europe, depuis plus de 600 ports.</p>
        </div>
    </div>
</section>

<!-- TÉMOIGNAGES -->
<section class="py-16 bg-white text-center">
    <h2 class="text-2xl font-semibold mb-8">Ce que disent nos clients</h2>
    <div class="flex flex-wrap justify-center gap-6 px-4">
        <div class="bg-gray-100 rounded-lg p-6 w-80 shadow text-left">
            <p class="italic">"Service incroyable, bateau impeccable, expérience inoubliable!"</p>
            <div class="mt-4 flex items-center gap-2 text-[#2d3e50] font-semibold">
                <i class="fas fa-user"></i> Sophie L.
                <div class="ml-auto text-yellow-500">★★★★★</div>
            </div>
        </div>
        <div class="bg-gray-100 rounded-lg p-6 w-80 shadow text-left">
            <p class="italic">"La réservation a été rapide et facile, je recommande à 100%."</p>
            <div class="mt-4 flex items-center gap-2 text-[#2d3e50] font-semibold">
                <i class="fas fa-user"></i> Julien M.
                <div class="ml-auto text-yellow-500">★★★★★</div>
            </div>
        </div>
        <div class="bg-gray-100 rounded-lg p-6 w-80 shadow text-left">
            <p class="italic">"Une équipe à l'écoute, tout était parfait du début à la fin."</p>
            <div class="mt-4 flex items-center gap-2 text-[#2d3e50] font-semibold">
                <i class="fas fa-user"></i> Clara D.
                <div class="ml-auto text-yellow-500">★★★★★</div>
            </div>
        </div>
    </div>
</section>

<!-- RENTABILISEZ -->
<section class="py-16 bg-[#f9f9f9] text-center">
    <h2 class="text-2xl font-semibold mb-4">Rentabilisez votre bateau en toute simplicité</h2>
    <p class="text-gray-600 max-w-xl mx-auto">Mettez votre bateau en location et rejoignez une communauté de passionnés.</p>
    <button class="mt-6 bg-[#c28b63] text-white px-6 py-2 rounded-md hover:bg-[#aa6f47]">Proposer mon bateau</button>
</section>

<!-- FOOTER -->
<footer class="bg-[#2d3e50] text-white py-10 px-6 mt-12">
    <div class="max-w-6xl mx-auto flex flex-wrap justify-between gap-8">
        <div>
            <h4 class="font-bold mb-2">SailFind</h4>
            <p>Votre plateforme de location de bateaux partout en Europe.</p>
        </div>
        <div>
            <h4 class="font-bold mb-2">Liens rapides</h4>
            <ul>
                <li><a href="#" class="hover:underline">Accueil</a></li>
                <li><a href="#" class="hover:underline">À propos</a></li>
                <li><a href="#" class="hover:underline">Contact</a></li>
            </ul>
        </div>
        <div>
            <h4 class="font-bold mb-2">Suivez-nous</h4>
            <p>[Facebook] [Instagram]</p>
        </div>
    </div>
    <div class="text-center mt-6 text-sm text-gray-300">© 2025 SailFind. Tous droits réservés.</div>
</footer>
