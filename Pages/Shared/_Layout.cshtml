@using Microsoft.AspNetCore.Identity
@using SaillingLoc.Models
@using SaillingLoc.Services
@using SaillingLoc.Data
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject INotificationService NotificationService

@{
    var isSignedIn = SignInManager.IsSignedIn(User);
    User currentUser = null;
    IList<string> roles = new List<string>();
    int unreadNotificationsCount = 0;

    if (isSignedIn)
    {
        currentUser = await UserManager.GetUserAsync(User);
        roles = await UserManager.GetRolesAsync(currentUser);

        if (currentUser != null)
        {
            unreadNotificationsCount = await NotificationService.GetUnreadNotificationsCountAsync(currentUser.Id);
        }
    }
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - SaillingLoc</title>

    <!-- Icônes -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" 
          integrity="sha512-pb41MQxDtPcR7i4l1+f6yxZNUvKv7FY9QpHboT1cUJ7SGHTlTftxEm6uUyOWYIsIEJf1hZx1e41yjzPWlYh5Bw==" 
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Styles personnalisés -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SaillingLoc.styles.css" asp-append-version="true" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            color: #2d3e50;
        }
        a.nav-link:hover,
        a.btn-outline-primary:hover,
        a.btn-outline-success:hover {
            color: #c28b63 !important;
        }
        .navbar-brand {
            font-weight: 700;
            color: #2d3e50 !important;
        }
        .btn-outline-primary,
        .btn-outline-success,
        .btn-outline-danger {
            font-weight: 600;
        }
        header, footer {
            background-color: #fff;
        }
        .cta-section {
            background-color: #fff;
            text-align: center;
            padding: 50px 20px;
            box-shadow: 0 -1px 6px rgba(0,0,0,0.1);
        }
        .cta-section h2 {
            font-size: 2rem;
            margin-bottom: 20px;
        }
        .cta-section p {
            font-size: 1.1rem;
            color: #eee;
            margin-bottom: 30px;
        }
        .cta-section .btn {
            font-size: 1rem;
            padding: 12px 30px;
        }
        footer {
            border-top: 1px solid #dee2e6;
        }
        .nav-link .badge {
            font-size: 0.7rem;
            padding: 0.25em 0.4em;
        }
        .position-relative .badge {
            font-size: 0.65rem;
            padding: 0.2em 0.4em;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom shadow-sm mb-4">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">SaillingLoc</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" 
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Index">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Privacy">Confidentialité</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Messages">Messagerie</a>
                        </li>

                        @if (isSignedIn)
                        {
                            if (roles.Contains("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/AdminDashboard">Dashboard Admin</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#mes-bateaux">Mes Bateaux</a>
                            </li>
                            if (roles.Contains("Locataire"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Locataire/MesReservations">Mes Réservations</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Messages">Messagerie</a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto mb-2 mb-md-0">
                        @if (isSignedIn)
                        {
                            <li class="nav-item d-flex align-items-center me-3">
                                <span class="nav-link mb-0 px-0">
                                    👤 @currentUser.FirstName (@roles.FirstOrDefault())
                                </span>
                            </li>

                            <li class="nav-item me-3">
                                <a href="/Notifications" class="nav-link position-relative" title="Notifications">
                                    <i class="fa-regular fa-bell fa-lg"></i>
                                    @if (unreadNotificationsCount > 0)
                                    {
                                        <span class="badge bg-danger position-absolute top-0 start-100 translate-middle rounded-pill">
                                            @unreadNotificationsCount
                                            <span class="visually-hidden">notifications non lues</span>
                                        </span>
                                    }
                                </a>
                            </li>

                            <li class="nav-item">
                                <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Déconnexion</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-primary btn-sm" asp-page="/Account/Login">Connexion</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-success btn-sm" asp-page="/Account/Register">Inscription</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="pb-4">
        @RenderBody()
    </main>

    <section class="cta-section" style="background-color: #4B6A88; color: white;">
        <h2>Prêt à réserver votre prochaine aventure ?</h2>
        <p>Des milliers de bateaux à louer dans toute l'Europe. Trouvez celui qui vous convient !</p>
        <a href="/Recherche" class="btn btn-light">Voir les offres</a>
    </section>

    <footer class="text-muted text-center py-3" style="background-color: #4B6A88; color: white;">
        <div class="container">
            &copy; @DateTime.Now.Year - SaillingLoc - Tous droits réservés
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- SignalR JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.0/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/notificationHub")
            .build();

        connection.on("ReceiveNotification", function (message) {
            alert("🔔 Nouvelle notification : " + message);

            const badge = document.querySelector(".nav-link.position-relative .badge");
            if (badge) {
                let count = parseInt(badge.textContent) || 0;
                badge.textContent = count + 1;
            }
        });

        connection.start().catch(function (err) {
            return console.error(err.toString());
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
