@using Microsoft.AspNetCore.Identity
@using SaillingLoc.Models
@using SaillingLoc.Services
@using SaillingLoc.Data
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject INotificationService NotificationService

@{
    var isSignedIn = SignInManager.IsSignedIn(User);
    User currentUser = null;
    IList<string> roles = new List<string>();
    int unreadNotificationsCount = 0;

    if (isSignedIn)
    {
        currentUser = await UserManager.GetUserAsync(User);
        roles = await UserManager.GetRolesAsync(currentUser);

        if (currentUser != null)
        {
            unreadNotificationsCount = await NotificationService.GetUnreadNotificationsCountAsync(currentUser.Id);
        }
    }
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - SaillingLoc</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Icônes -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Styles personnalisés -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SaillingLoc.styles.css" asp-append-version="true" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            color: #2d3e50;
        }

        /* --- DARK MODE --- */
        body.dark-mode {
            background-color: #121212 !important;
            color: #f1f1f1 !important;
        }

        body.dark-mode header,
        body.dark-mode footer,
        body.dark-mode .cta-section {
            background-color: #1f1f1f !important;
            color: #f1f1f1 !important;
        }

        body.dark-mode .nav-link {
            color: #f1f1f1 !important;
        }

        body.dark-mode .nav-link:hover {
            color: #AD7C59 !important;
        }

        body.dark-mode .navbar-brand {
            color: #fff !important;
        }

        /* --- HEADER --- */
        header {
            background-color: #F5F1EB;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        .navbar {
            padding: 0.8rem 0;
            background-color: transparent !important;
            border-bottom: none !important;
            box-shadow: none !important;
            margin-bottom: 0 !important;
        }

        .navbar-brand {
            font-weight: 700;
            color: #2d3e50 !important;
            padding: 0;
            margin-right: 50px;
        }

        .navbar-brand img {
            height: 45px;
        }

        /* --- NAV LINKS VISIBLES --- */
        .navbar-nav .nav-link {
            color: #2d3e50 !important;
            font-weight: 500;
            font-size: 0.95rem;
            padding: 0.5rem 1rem !important;
            border-radius: 6px;
            transition: all 0.2s ease;
        }

        .navbar-nav .nav-link:hover {
            color: #AD7C59 !important;
            background-color: rgba(173, 124, 89, 0.08);
        }

        /* --- BOUTONS --- */
        .custom-btn {
            background-color: transparent;
            color: #AD7C59;
            border: 1.5px solid #AD7C59;
            padding: 0.4rem 1.2rem;
            border-radius: 6px;
            font-weight: 600;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }

        .custom-btn:hover {
            background-color: #AD7C59;
            color: white;
        }

        .btn-outline-success {
            background-color: #AD7C59;
            color: white;
            border: 1.5px solid #AD7C59;
        }

        .btn-outline-success:hover {
            background-color: #9a6b4f;
            border-color: #9a6b4f;
        }

        /* --- SELECTEUR DE LANGUE --- */
        .language-selector {
            background-color: white;
            border: 1.5px solid #ddd;
            color: #2d3e50;
            padding: 0.4rem 0.8rem;
            border-radius: 6px;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .language-selector:hover {
            border-color: #AD7C59;
            background-color: #fafafa;
        }

        /* --- USER INFO --- */
        .user-info {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #2d3e50;
            font-weight: 500;
            font-size: 0.9rem;
        }

        /* --- BADGES --- */
        .position-relative .badge {
            font-size: 0.65rem;
            padding: 0.2em 0.4em;
        }

        /* --- DARK MODE TOGGLE --- */
        .form-check-input:checked {
            background-color: #4B6A88;
            border-color: #4B6A88;
        }

        body.dark-mode .form-check-label {
            color: #f1f1f1 !important;
        }

        /* --- CTA + FOOTER --- */
        .cta-section {
            background-color: #fff;
            text-align: center;
            padding: 50px 20px;
            box-shadow: 0 -1px 6px rgba(0,0,0,0.1);
        }

        footer {
            background-color: #fff;
            border-top: 1px solid #dee2e6;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/images/plan2.png" alt="Logo SailingLoc" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item"><a class="nav-link" asp-page="/Index">Accueil</a></li>

                        @if (isSignedIn)
                        {
                            <li class="nav-item"><a class="nav-link" asp-page="/Messages">Messagerie</a></li>
                            <li class="nav-item"><a class="nav-link" asp-page="/MyReservations">Mes Réservations</a></li>

                            @if (roles.Contains("Admin"))
                            {
                                <li class="nav-item"><a class="nav-link" asp-page="/AdminDashboard">Dashboard Admin</a></li>
                            }

                            <li class="nav-item"><a class="nav-link" href="#mes-bateaux">Mes Bateaux</a></li>
                        }

                        <li class="nav-item"><a class="nav-link" asp-page="/Contacts">Contact</a></li>
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item me-3">
                            <select class="language-selector">
                                <option value="fr">FR</option>
                                <option value="en">EN</option>
                                <option value="es">ES</option>
                            </select>
                        </li>

                        <li class="nav-item me-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" role="switch" id="darkModeSwitch">
                                <label class="form-check-label" for="darkModeSwitch">🌙</label>
                            </div>
                        </li>

                        @if (isSignedIn)
                        {
                            <li class="nav-item me-3">@await Component.InvokeAsync("UnreadMessages")</li>
                            <li class="nav-item me-3">
                                <a href="/Notifications" class="nav-link position-relative p-2" title="Notifications">
                                    <i class="fa-regular fa-bell fa-lg"></i>
                                    @if (unreadNotificationsCount > 0)
                                    {
                                        <span class="badge bg-danger position-absolute top-0 start-100 translate-middle rounded-pill">
                                            @unreadNotificationsCount
                                        </span>
                                    }
                                </a>
                            </li>
                            <li class="nav-item me-3"><span class="user-info"><i class="fa-solid fa-user"></i>@currentUser.FirstName</span></li>
                            <li class="nav-item">
                                <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="d-inline">
                                    <button type="submit" class="btn btn-sm custom-btn">Déconnexion</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2"><a class="nav-link" asp-page="/Ajoutbat" style="font-weight: 600;">Enregistrer votre bateau</a></li>
                            <li class="nav-item me-2"><a class="btn btn-sm custom-btn" asp-page="/Account/Login">Se connecter</a></li>
                            <li class="nav-item"><a class="btn btn-sm btn-outline-success" asp-page="/Account/Register">Inscription</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="pb-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <section class="cta-section" style="background-color: #4B6A88; color: black; padding: 20px;">
        <div class="row mt-5 text-center" style="color: white;">
            <div class="col-md-4">
                <h2 style="font-weight: bold;">SAILINGLOC</h2>
                <p>Rejoignez l’aventure SailingLoc en un clic</p>
                <div style="display: flex; justify-content: center; gap: 15px;">
                    <a href="#" style="width: 45px; height: 45px; border-radius: 50%; background-color: #AD7C59; color: white; display: flex; align-items: center; justify-content: center;"><i class="fab fa-facebook"></i></a>
                    <a href="#" style="width: 45px; height: 45px; border-radius: 50%; background-color: #AD7C59; color: white; display: flex; align-items: center; justify-content: center;"><i class="fab fa-instagram"></i></a>
                    <a href="#" style="width: 45px; height: 45px; border-radius: 50%; background-color: #AD7C59; color: white; display: flex; align-items: center; justify-content: center;"><i class="fab fa-linkedin"></i></a>
                </div>
            </div>

            <div class="col-md-4">
                <h4 style="font-weight: bold;">Liens Rapides</h4>
                <p>
                    <a asp-page="/About" style="color: #F5F1EB;">À Propos</a><br>
                    <a asp-page="/CGU" style="color: #F5F1EB;">CGU</a><br>
                    <a asp-page="/Legal" style="color: #F5F1EB;">Mentions Légales</a><br>
                    <a asp-page="/CookiePolicy" style="color: #F5F1EB;">Politique des Cookies</a><br>
                    <a asp-page="/PrivacyPolicy" style="color: #F5F1EB;">Politiques de Confidentialité</a><br>
                    <a asp-page="/Sitemap" style="color: #F5F1EB;">Plan du site</a><br>
                    <a asp-page="/Contacts" style="color: #F5F1EB;">Contact</a>
                </p>
            </div>

            <div class="col-md-4">
                <h4 style="font-weight: bold;">Ne manquez aucune opportunité</h4>
                <p>Inscrivez-vous à notre newsletter et recevez les meilleures offres.</p>
                <input type="email" placeholder="Entrer votre email" style="padding: 10px; width: 80%; border: none; border-radius: 4px; background-color: #AD7C59; color: white;">
            </div>
        </div>
    </section>

    <footer class="text-muted text-center py-3" style="background-color: #4B6A88; color: white;">
        <div class="container">
            &copy; @DateTime.Now.Year - ©2025 Pandawan. All rights reserved.
        </div>
    </footer>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Dark Mode -->
    <script>
        const darkModeSwitch = document.getElementById('darkModeSwitch');
        const body = document.body;
        if (localStorage.getItem('darkMode') === 'enabled') {
            body.classList.add('dark-mode');
            darkModeSwitch.checked = true;
        }
        darkModeSwitch.addEventListener('change', () => {
            if (darkModeSwitch.checked) {
                body.classList.add('dark-mode');
                localStorage.setItem('darkMode', 'enabled');
            } else {
                body.classList.remove('dark-mode');
                localStorage.setItem('darkMode', 'disabled');
            }
        });
    </script>

    <!-- Cookie Banner -->
    <div id="cookie-banner" style="position: fixed; bottom: 0; left: 0; width: 100%; background-color: #4B6A88; color: white; padding: 15px; text-align: center; display: flex; justify-content: space-between; align-items: center; z-index: 1000;">
        <span>
            Nous utilisons des cookies pour améliorer votre expérience sur notre site.
            <a href="/Legal" style="color: #AD7C59; text-decoration: underline;">En savoir plus</a>
        </span>
        <button id="accept-cookies" style="background-color: #AD7C59; color: white; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer;">Accepter</button>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const banner = document.getElementById('cookie-banner');
            const acceptBtn = document.getElementById('accept-cookies');
            if (localStorage.getItem('cookiesAccepted') === 'true') banner.style.display = 'none';
            acceptBtn.addEventListener('click', function () {
                localStorage.setItem('cookiesAccepted', 'true');
                banner.style.display = 'none';
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
